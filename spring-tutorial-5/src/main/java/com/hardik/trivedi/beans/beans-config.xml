<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">



	<bean id="person" class="com.hardik.trivedi.Person">
		<constructor-arg value="123" name="id" type="int"></constructor-arg><!-- 
			'name' should be same as arguments to constructor -->
		<constructor-arg value="Hardik" name="name" type="String"></constructor-arg>
		
		<!-- <property name="taxId" value="123"></property> -->
		<!-- OR -->
		<property name="taxId">
			<value>123</value>
		</property>
		
		
		
		
	</bean>
</beans>
